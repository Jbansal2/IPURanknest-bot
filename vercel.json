{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/webhook",
      "dest": "/api/webhook.js"
    },
    {
      "src": "/api/updates",
      "dest": "/api/check-updates.js"
    },
    {
      "src": "/api/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api/health.js"
    }
  ],
  "env": {
    "BOT_TOKEN": "@bot_token",
    "MONGODB_URI": "@mongodb_uri",
    "WEBHOOK_DOMAIN": "@webhook_domain"
  }
}
